<Window x:Class="SpecLookUp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpecLookUp"
        mc:Ignorable="d"
        xmlns:converter="clr-namespace:SpecLookUp.Converters"
        Title="SpecSniffer database" Height="880" Width="1820" WindowStartupLocation="CenterScreen" FontSize="14">

    <Window.Resources>
        <Style TargetType="TextBlock" x:Key="MenuTextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="10,0,3,0"/>
        </Style>
        <Style TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="AlternatingRowBackground" Value="#FFE8F7FF"/>
            <Setter Property="CanUserAddRows" Value="False"/>
        </Style>
        




        <converter:SelectedDeviceToEnabledConverter x:Key="SelectedDeviceToEnabled"/>
        <converter:LogVisibilityToOpacityConverter x:Key="LogVisibilityToOpacity"/>
    </Window.Resources>
    <Window.DataContext>
        <local:ViewModel/>
    </Window.DataContext>
