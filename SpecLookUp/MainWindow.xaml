                            <RowDefinition Height="0.05*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="0,3">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="19*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal" Grid.Column="0" HorizontalAlignment="Left" Width="1401">
                                <StackPanel.InputBindings>
                                    <KeyBinding Command="{Binding DeviceSearchCommand}" Key="Return"/>
                                </StackPanel.InputBindings>


                                <Button Content="Search" Width="120" Command="{Binding DeviceSearchCommand}"/>
                                <ComboBox x:Name="TypeCBox" IsEditable="True" Width="60" Height="24" Margin="5,0" Text="{Binding LogTypeInput}">
                                    <ComboBoxItem Content="SO"/>
                                    <ComboBoxItem Content="PO"/>
                                    <ComboBoxItem Content="RMA"/>
                                    <ComboBoxItem Content="Other"/>
                                    <ComboBoxItem Content="Any"/>
                                </ComboBox>
                                <TextBlock Text="Log Reference:" Style="{StaticResource MenuTextBlock}"/>
                                <TextBox Width="90" Margin="0,2" Text="{Binding LogReferenceInput, UpdateSourceTrigger=PropertyChanged}"/>

                                <TextBlock Text="Device S/N:" Style="{StaticResource MenuTextBlock}"/>
                                <TextBox Width="190" Margin="0,2" Text="{Binding DeviceSnInput, UpdateSourceTrigger=PropertyChanged}"/>

                                <TextBlock Text="Storage S/N:" Style="{StaticResource MenuTextBlock}"/>
                                <TextBox Width="190" Margin="0,2" Text="{Binding StorageSnInput, UpdateSourceTrigger=PropertyChanged}"/>

                                <TextBlock Text="CMAR:" Style="{StaticResource MenuTextBlock}"/>
                                <TextBox Width="190" Margin="0,2" Text="{Binding CmarInput, UpdateSourceTrigger=PropertyChanged}"/>

                                <TextBlock Text="Limit:" Style="{StaticResource MenuTextBlock}"/>
                                <ComboBox x:Name="LimitCBox" IsEditable="True" Width="60" Height="24" Margin="5,0" Text="{Binding SearchLimitInput}">
                                    <ComboBoxItem Content="50"/>
                                    <ComboBoxItem Content="100"/>
                                    <ComboBoxItem Content="500"/>
                                    <ComboBoxItem Content="1000"/>
                                </ComboBox>
                                <CheckBox x:Name="DeepSearchBox"  Content="Show hidden" VerticalAlignment="Center" IsChecked="{Binding SearchHiddenInput}"/>
                            </StackPanel>
                            <ToggleButton Content="{Binding RefreshBtnText}" Grid.Column="1" Margin="5,0" IsChecked="{Binding RefreshIsChecked, Mode=TwoWay}" />


                        </Grid>


