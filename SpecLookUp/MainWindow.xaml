<Window x:Class="SpecLookUp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpecLookUp"
        mc:Ignorable="d"
        Title="SpecSniffer database" Height="880" Width="1820" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="TextBlock" x:Key="MenuTextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="10,0,3,0"/>
        </Style>
        <Style TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="AlternatingRowBackground" Value="LightSteelBlue"/>
            <Setter Property="CanUserAddRows" Value="False"/>
        </Style>
    </Window.Resources>
    <Window.DataContext>
        <local:ViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid>

            <TabControl>

                <TabItem Header="Spec.">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="20*"/>
                        </Grid.RowDefinitions>



                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,3" >
                            <Button Content="Search" Width="120"/>
                            <TextBlock Text="SO:" Style="{StaticResource MenuTextBlock}"/>
                            <TextBox Width="90" Margin="0,2"/>
                            <TextBlock Text="S/N:" Style="{StaticResource MenuTextBlock}"/>
                            <TextBox Width="90" Margin="0,2"/>
                        </StackPanel>

                        <DataGrid Grid.Row="1" x:Name="SpecDataGrid"
                                  ItemsSource="{Binding SpecLogList}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="SO" MaxWidth="70" Binding="{Binding saveReference}"/>
                                <DataGridTextColumn Header="Serial Number" MaxWidth="220" Binding="{Binding serial}"/>
                                <DataGridTextColumn Header="Description" MaxWidth="520" Binding="{Binding description}"/>
                                <DataGridTextColumn Header="Graphic Card's" MaxWidth="340" Binding="{Binding gpu}"/>
                                <DataGridTextColumn Header="Comments" Binding="{Binding comments}"/>
                                <DataGridTextColumn Header="CMAR" Binding="{Binding cmarLicense}"/>
                                <DataGridTextColumn Header="Storage S/N" Binding="{Binding hddSN}"/>
                                <DataGridTextColumn Header="Storage P/N" Binding="{Binding hddPN}"/>
                                <DataGridTextColumn Header="Storage Size" Binding="{Binding hddSize}"/>
                                <DataGridTextColumn Header="Storage Health" Binding="{Binding hddHealth}"/>
                                <DataGridTextColumn Header="Model" Binding="{Binding model}"/>
                                <DataGridTextColumn Header="Device Type" Binding="{Binding chassisType}"/>
                                <DataGridTextColumn Header="CPU" Binding="{Binding Cpu}"/>
                                <DataGridTextColumn Header="Memory Banks" Binding="{Binding ramSize}"/>
                                <DataGridTextColumn Header="Memory S/N" Binding="{Binding ramSN}"/>
                                <DataGridTextColumn Header="Memory P/N" Binding="{Binding ramPN}"/>
                                <DataGridTextColumn Header="ODD" Binding="{Binding optical}"/>
                                <DataGridTextColumn Header="Operating System" Binding="{Binding osName}"/>
                                <DataGridTextColumn Header="OS Build" Binding="{Binding osBuild}"/>
                                <DataGridTextColumn Header="OS Language" Binding="{Binding osLanguages}"/>
                                <DataGridTextColumn Header="OS ID" Binding="{Binding osSerial}"/>
                                <DataGridTextColumn Header="OS License" Binding="{Binding osLicense}"/>
                                <DataGridTextColumn Header="OS Label" Binding="{Binding licenseLabel}"/>
                                <DataGridTextColumn Header="Battery P/N" Binding="{Binding batteryPN}"/>
                                <DataGridTextColumn Header="Battery Health" Binding="{Binding batteryHealth}"/>
                                <DataGridTextColumn Header="Battery Charge" Binding="{Binding batteryCharge}"/>
                                <DataGridTextColumn Header="RP" Binding="{Binding rp}"/>
                                <DataGridTextColumn Header="Time Stamp" Binding="{Binding date}"/>

                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>


                </TabItem>

            </TabControl>

        </Grid>
        
    </Grid>
</Window>
